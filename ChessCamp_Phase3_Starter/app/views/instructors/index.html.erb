<p id="notice"><%= notice %></p>

<% if @instructors.empty? %>
  <h2>There are no instructors in the system at this time</h2>

<% else %>
  <h1>Instructors</h1>
  
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Camps</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @instructors.each do |instructor| %>
        <tr>
          <td><%= link_to instructor.name, instructor %></td>
          <td><%= number_to_phone instructor.phone %></td>
          <td><%= instructor.camps.size %></td>
          <td><%= link_to 'Edit', edit_instructor_path(instructor) %></td>
          <!--<td><= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>

<br>

<%= link_to 'New Instructor', new_instructor_path %>