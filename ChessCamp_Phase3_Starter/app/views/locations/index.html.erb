<p id="notice"><%= notice %></p>

<% if @locations.empty? %>
  <h2>There are no active locations in the system at this time</h2>

<% else %>
  <h1>Locations</h1>
  
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Capacity</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @locations.each do |location| %>
        <tr>
          <td><%= link_to location.name, location %></td>
          <td><%= location.street_1 %>, <%= location.street_2 %>, <%= location.city %>, <%= location.state %> <%= location.zip %></td>
          <!--<td><= location.street_2 %></td>-->
          <!--<td><= location.city %></td>-->
          <!--<td><= location.state %></td>-->
          <!--<td><= location.zip %></td>-->
          <td><%= location.max_capacity %></td>
          <!--<td><= link_to 'Show', location %></td>-->
          <td><%= link_to 'Edit', edit_location_path(location) %></td>
          <!--<td><= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
<br>

<%= link_to 'New Location', new_location_path %>